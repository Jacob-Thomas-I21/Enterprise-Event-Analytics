# SECURE ENVIRONMENT CONFIGURATION
# Copy this to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@localhost:5432/event_analytics
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@localhost:6379

# JWT Configuration - MUST BE CHANGED IN PRODUCTION
JWT_SECRET_KEY=GENERATE_A_SECURE_32_CHAR_SECRET_KEY_HERE_12345
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption - MUST BE CHANGED IN PRODUCTION
ENCRYPTION_KEY=GENERATE_A_SECURE_32_CHAR_ENCRYPTION_KEY_HERE

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
AI_MODEL=anthropic/claude-3-haiku

# External APIs
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
COINGECKO_API_KEY=your-coingecko-api-key

# Application Configuration
APP_NAME=Enterprise Event Analytics
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE=10MB

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Frontend Configuration
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_WS_URL=wss://api.yourdomain.com
REACT_APP_ENVIRONMENT=production

# SECURITY NOTES:
# 1. Generate secure random keys for JWT_SECRET_KEY and ENCRYPTION_KEY
# 2. Use strong passwords for all database connections
# 3. Enable SSL/TLS for all external connections
# 4. Restrict CORS_ORIGINS to your actual domains
# 5. Set DEBUG=false in production
# 6. Use environment-specific values for each deployment